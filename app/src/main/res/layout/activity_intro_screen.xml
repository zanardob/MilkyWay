<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intro"
    android:id="@+id/activity_intro_screen">

    <ImageView
    android:id="@+id/background_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg_intro"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/background_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_intro"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        app:srcCompat="@drawable/astrocow"
        android:id="@+id/astrocow"
        android:layout_marginTop="118dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutIntro">

        <ImageView
            app:srcCompat="@drawable/logo"
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Criar Conta"
            android:id="@+id/createButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:textSize="18sp"
            android:elevation="0dp"
            android:textIsSelectable="false"
            android:textStyle="normal|bold"
            android:background="#E91E63"
            android:layout_height="60dp"
            android:layout_above="@+id/fbButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />

        <Button
            android:text="Entrar Com Facebook"
            android:id="@+id/fbButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:textStyle="normal|bold"
            android:background="#E91E63"
            android:layout_height="40dp"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/enterButton"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Entrar Com Conta"
            android:id="@+id/enterButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="normal|bold"
            android:layout_width="200dp"
            android:layout_marginBottom="27dp"
            android:background="#E91E63"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/fbButton"
            android:layout_alignStart="@+id/fbButton" />

    </RelativeLayout>

</FrameLayout>
